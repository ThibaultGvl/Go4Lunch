<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ConnexionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/connexion_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/go4lunch_background" />

    <ImageView
        android:id="@+id/connexion_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_logo_go4lunch"
        app:tint="@color/white"
        android:layout_alignTop="@id/connexion_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/bottom_bar_height"
        android:paddingStart="10dp"/>

    <TextView
        android:id="@+id/connexion_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="75sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/connexion_logo"/>

    <TextView
        android:id="@+id/connexion_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slogan"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:layout_below="@id/connexion_app_name"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/connexion_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:text="@string/sign_in_with_facebook"
        android:textColor="@color/white"
        android:drawableTint="@color/white"
        android:drawableStart="@drawable/ic_facebook_logo"
        android:backgroundTint="@color/com_facebook_blue"
        android:layout_below="@id/connexion_slogan"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/connexion_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="15dp"
        android:textColor="@color/white"
        android:text="@string/sign_in_with_google"
        android:drawableStart="@drawable/ic_google_button"
        android:drawableTint="@color/white"
        android:backgroundTint="@color/google_btn"
        android:layout_alignStart="@id/connexion_fb"
        android:layout_alignEnd="@id/connexion_fb"
        android:layout_below="@id/connexion_fb"
        android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</ScrollView>